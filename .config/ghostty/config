theme = rose-pine-moon
font-family = Iosevka Fixed
font-size = 16
command = /opt/homebrew/bin/nu --config ~/.config/nushell/config.nu --env-config ~/.config/nushell/env.nu

macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden

selection-background = #6e6a86
selection-foreground = #e0def4

# KEYBINDS

keybind = cmd+shift+l=next_tab
keybind = cmd+shift+h=previous_tab

keybind = cmd+shift+left=move_tab:-1
keybind = cmd+shift+right=move_tab:1

keybind = opt+shift+l=goto_split:right
keybind = opt+shift+h=goto_split:left
